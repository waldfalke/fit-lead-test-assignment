{
  "$schema": "https://tr.designtokens.org/format-module/spec/",
  "$description": "Fit&Lead Design Tokens - Reference documentation. Source of truth: app/globals.css (@theme directive for Tailwind v4)",
  "color": {
    "brand": {
      "primary": {
        "$type": "color",
        "$value": "#00484F",
        "$description": "Fit&Lead primary color (dark teal) - extracted from theme-default.css"
      },
      "accent": {
        "$type": "color",
        "$value": "#FBEA1B",
        "$description": "Fit&Lead accent color (yellow) - extracted from Fit&Lead.html gradient"
      }
    },
    "neutral": {
      "50": { "$type": "color", "$value": "#FAFAFA" },
      "100": { "$type": "color", "$value": "#F5F5F5" },
      "200": { "$type": "color", "$value": "#E5E5E5" },
      "300": { "$type": "color", "$value": "#D4D4D4" },
      "400": { "$type": "color", "$value": "#A3A3A3" },
      "500": { "$type": "color", "$value": "#737373" },
      "600": { "$type": "color", "$value": "#525252" },
      "700": { "$type": "color", "$value": "#404040" },
      "800": { "$type": "color", "$value": "#262626" },
      "900": { "$type": "color", "$value": "#171717" }
    },
    "semantic": {
      "background": {
        "light": { "$type": "color", "$value": "#FFFFFF" },
        "dark": { "$type": "color", "$value": "#0A0A0A" }
      },
      "surface": {
        "light": { "$type": "color", "$value": "#F5F7FA", "$description": "Холодный светло-голубой surface" },
        "dark": { "$type": "color", "$value": "#1A1A1A" }
      },
      "text": {
        "primary": {
          "light": { "$type": "color", "$value": "#1A1A1A" },
          "dark": { "$type": "color", "$value": "#F5F5F5" }
        },
        "secondary": {
          "light": { "$type": "color", "$value": "#5A5A5A", "$description": "Теплый серый, не чистый" },
          "dark": { "$type": "color", "$value": "#AAAAAA" }
        },
        "onAccent": { 
          "$type": "color", 
          "$value": "#0A0A0A", 
          "$description": "Почти черный текст на желтом (#FBEA1B), высокий контраст" 
        },
        "onPrimary": { 
          "$type": "color", 
          "$value": "#FFFFFF", 
          "$description": "Белый текст на бирюзовом (#00484F)" 
        }
      },
      "border": {
        "light": { "$type": "color", "$value": "#E6EEF0", "$description": "Холодный border" },
        "dark": { "$type": "color", "$value": "#333333" }
      },
      "success": { "$type": "color", "$value": "#28c76f" },
      "warning": { "$type": "color", "$value": "#ff9f43" },
      "danger": { "$type": "color", "$value": "#ff4c51" },
      "info": { "$type": "color", "$value": "#00bad1" }
    },
    "interactive": {
      "primary": {
        "default": { "$type": "color", "$value": "#00484F" },
        "hover": { "$type": "color", "$value": "#003A3F" }
      },
      "accent": {
        "default": { "$type": "color", "$value": "#FBEA1B" },
        "hover": { "$type": "color", "$value": "#E8D818" }
      },
      "focus": { 
        "$type": "color", 
        "$value": "rgba(0, 72, 79, 0.4)", 
        "$description": "Focus ring color based on primary" 
      }
    },
    "gradient": {
      "brand": {
        "$type": "gradient",
        "$value": "linear-gradient(116deg, #FBEA1B 11.8%, #00484F 91.32%)",
        "$description": "Fit&Lead brand gradient (yellow to teal) - from auth page background"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "sans": {
        "$type": "fontFamily",
        "$value": ["Public Sans", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "sans-serif"],
        "$description": "Extracted from --bs-font-sans-serif"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": ["SFMono-Regular", "Menlo", "Monaco", "Consolas", "Liberation Mono", "Courier New", "monospace"]
      }
    },
    "fontSize": {
      "xs": { "$type": "dimension", "$value": "0.75rem", "$description": "12px" },
      "sm": { "$type": "dimension", "$value": "0.8125rem", "$description": "13px - small text" },
      "base": { "$type": "dimension", "$value": "0.9375rem", "$description": "15px - body text" },
      "lg": { "$type": "dimension", "$value": "1.125rem", "$description": "18px" },
      "xl": { "$type": "dimension", "$value": "1.5rem", "$description": "24px - h4" },
      "2xl": { "$type": "dimension", "$value": "1.75rem", "$description": "28px - h3" },
      "3xl": { "$type": "dimension", "$value": "2.375rem", "$description": "38px - h2" },
      "4xl": { "$type": "dimension", "$value": "2.875rem", "$description": "46px - h1" }
    },
    "fontWeight": {
      "normal": { "$type": "fontWeight", "$value": "400" },
      "medium": { "$type": "fontWeight", "$value": "500" },
      "semibold": { "$type": "fontWeight", "$value": "600" },
      "bold": { "$type": "fontWeight", "$value": "700" }
    },
    "lineHeight": {
      "tight": { "$type": "number", "$value": "1.25" },
      "base": { "$type": "number", "$value": "1.375", "$description": "Extracted from --bs-body-line-height" },
      "relaxed": { "$type": "number", "$value": "1.625" }
    }
  },
  "spacing": {
    "xs": { "$type": "dimension", "$value": "0.5rem", "$description": "8px" },
    "sm": { "$type": "dimension", "$value": "1rem", "$description": "16px" },
    "md": { "$type": "dimension", "$value": "1.5rem", "$description": "24px" },
    "lg": { "$type": "dimension", "$value": "2rem", "$description": "32px" },
    "xl": { "$type": "dimension", "$value": "3rem", "$description": "48px" },
    "2xl": { "$type": "dimension", "$value": "4rem", "$description": "64px" }
  },
  "borderRadius": {
    "sm": { "$type": "dimension", "$value": "0.25rem", "$description": "4px - extracted from --bs-border-radius-sm" },
    "md": { "$type": "dimension", "$value": "0.375rem", "$description": "6px - base border radius" },
    "lg": { "$type": "dimension", "$value": "0.5rem", "$description": "8px - extracted from --bs-border-radius-lg" },
    "xl": { "$type": "dimension", "$value": "0.625rem", "$description": "10px - extracted from --bs-border-radius-xl" },
    "2xl": { "$type": "dimension", "$value": "2rem", "$description": "32px - extracted from --bs-border-radius-xxl" },
    "full": { "$type": "dimension", "$value": "9999px", "$description": "Pill shape - для кнопок/бэйджей" }
  },
  "boxShadow": {
    "sm": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0",
        "offsetY": "0.125rem",
        "blur": "0.5rem",
        "spread": "0",
        "color": "rgba(47, 43, 61, 0.12)"
      },
      "$description": "Small shadow - extracted from --bs-box-shadow-sm"
    },
    "md": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0",
        "offsetY": "0.1875rem",
        "blur": "0.75rem",
        "spread": "0",
        "color": "rgba(47, 43, 61, 0.14)"
      },
      "$description": "Medium shadow - extracted from --bs-box-shadow"
    },
    "lg": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0",
        "offsetY": "0.25rem",
        "blur": "1.125rem",
        "spread": "0",
        "color": "rgba(47, 43, 61, 0.16)"
      },
      "$description": "Large shadow - extracted from --bs-box-shadow-lg"
    },
    "focus": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0",
        "offsetY": "0",
        "blur": "0",
        "spread": "0.15rem",
        "color": "rgba(47, 43, 61, 0.75)"
      },
      "$description": "Focus ring - extracted from --bs-focus-ring"
    }
  }
}
